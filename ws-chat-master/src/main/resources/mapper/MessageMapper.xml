<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.molu.app.mapper.MessageMapper">


    <insert id="addMessage" parameterType="cn.molu.app.pojo.ResultMessage">
        insert into message
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">
                id,
            </if>
            <if test="fromId != null">
                user_id,
            </if>
            <if test="toId != null">
                to_user_id,
            </if>
            <if test="message != null">
                content,
            </if>
            <if test="dateStr != null">
                create_time,
            </if>
            <if test="dateStr != null">
                update_time,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null">
                #{id},
            </if>
            <if test="fromId != null">
                #{fromId},
            </if>
            <if test="toId != null">
                #{toId},
            </if>
            <if test="message != null">
                #{message},
            </if>
            <if test="dateStr != null">
                #{dateStr},
            </if>
            <if test="dateStr != null">
                #{dateStr},
            </if>
        </trim>
    </insert>

    <select id="queryChatMessageList" resultType="cn.molu.app.pojo.Message">
        SELECT * FROM message
                 WHERE
                     user_id = #{fromId}
                     AND to_user_id = #{toId}
    </select>
</mapper>